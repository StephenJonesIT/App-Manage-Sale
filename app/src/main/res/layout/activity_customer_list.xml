<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="CustomerListViewModel"
            type="vn.edu.stu.tranthanhsang.manage_sales.viewModel.customer.CustomerListViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.customer.CustomerListActivity">

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/bottom_nav_background_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_return"
            android:background="@color/bottom_nav_background_color"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/_20sdp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/img_return"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Khách hàng"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/tv_title"/>

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:queryHint="Tên khách hàng"
            app:iconifiedByDefault="false"
            android:layout_margin="@dimen/_26sdp"
            android:background="@drawable/custom_search"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_all_customer"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center"
            app:layout_constraintEnd_toStartOf="@id/rdg_container"
            app:layout_constraintTop_toTopOf="@id/rdg_container"
            app:layout_constraintBottom_toBottomOf="@id/rdg_container"
            android:text="Loại khách hàng:"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="italic|bold"/>
        <RadioGroup
            android:id="@+id/rdg_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:weightSum="1"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_all_customer">
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight=".7"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:id="@+id/rbd_normal"
                android:text="Bình thường"/>
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:id="@+id/rbd_vip"
                android:text="VIP"/>
        </RadioGroup>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_customer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rdg_container"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="16dp"
            android:scrollbars="vertical"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/blue"
            android:onClick="@{}"
            android:src="@android:drawable/ic_input_add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="30dp"
            android:tint="@color/white"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
